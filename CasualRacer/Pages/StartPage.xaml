<Page x:Class="CasualRacer.Pages.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CasualRacer.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="StartPage">

    <Grid>
        <Image Source="/CasualRacer;component/Assets/LogoCroped.png" Width="755" VerticalAlignment="Top" Margin="100" />
        <StackPanel Width="200" VerticalAlignment="Bottom" Margin="100">
            <Button Content="Start Game" Click="GameButton_Click"  />
            <Button Content="Options" Click="OptionsButton_Click" />
            <Button Content="Credits" Click="CreditsButton_Click" />
            <Button Content="Exit" Click="ExitButton_Click" />
        </StackPanel>
        
    </Grid>
</Page>
