<Window x:Class="CasualRacer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CasualRacer"
        mc:Ignorable="d"
        Title="Casual Racer" Height="720" Width="1280" ResizeMode="NoResize">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Assets/Background.png" Stretch="UniformToFill"/>
        </Grid.Background>
        <Frame x:Name="NavigationFrame"
               NavigationUIVisibility="Hidden"
               Navigating="NavigationFrame_Navigating"/>
    </Grid>
</Window>
